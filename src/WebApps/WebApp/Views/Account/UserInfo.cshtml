@model UserInfoViewModel
@{
    ViewData["Title"] = "UserInfo";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User info</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Claim Type</th>
                            <th scope="col">Claim Value</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model.UserInfoDictionary)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modeItem => user.Key)
                                </td>
                                <td>@Html.DisplayFor(modeItem => user.Value)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

