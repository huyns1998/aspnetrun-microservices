@model CatalogModel

<div class="col-12 col-md-3">
    <div class="card">
        <div class="card-header bg-success text-white text-uppercase">
            <i class="fa fa-heart"></i> Top product
        </div>
        <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@Model.Id"><img asp-append-version="true" class="img-fluid border-0" src="~/images/product/@Model.ImageFile" alt="Card image cap"></a>
        <div class="card-body">
            <h4 class="card-title text-center"><a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@Model.Id" title="View Product">@Model.Name</a></h4>
            <div class="row">
                <div class="col">
                    @if (Model.Price == Model.DiscountPrice)
                    {
                        <p class="btn btn-danger btn-block">@Model.Price $</p>
                    }
                    else
                    {
                        <p class="btn btn-danger btn-block">
                            <span>@Model.DiscountPrice $</span><br/>
                            <span style="text-decoration: line-through">@Model.Price $</span>
                        </p>
                    }
                </div>
                <div class="col">
                    <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-success btn-block">View</a>
                </div>
            </div>
        </div>
    </div>
</div>